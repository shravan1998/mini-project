<!DOCTYPE html>
<html>
  <head>
    <!--Import Google Icon Font-->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!--Import materialize.css-->
    <link type="text/css" rel="stylesheet" href="node_modules/materialize-css/dist/css/materialize.min.css"  media="screen,projection"/>
    
    <!--Let browser know website is optimized for mobile-->
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <style>
      @import url('https://fonts.googleapis.com/css?family=Slabo+27px');
      </style> 
    <title>Railway ticket booking</title>
    
  </head>

  <body>
      <nav class="light-blue">
          <div class="nav-wrapper">
              <a class="brand-logo">Railway Ticket Booking</a>
            <ul id="nav-mobile" class="right hide-on-med-and-down">
                
              <li><a href="train">Train</a></li>
              <li><a href="clerk">Clerk</a></li>
              <li><a href="station">Station</a></li>
              <li><a href="admin">Admin</a></li>
              <li><a href="login">Logout</a></li>
            </ul>
          </div>
        </nav>
    
        <div class="row">
                <form class="col s12" action="/passenger" method="POST">
                  <div class="row">
                    <div class="input-field col s6">
                      <input id="firstname" type="text" class="validate" name="fname">
                      <label for="firstname" style="color:black">First Name</label>
                    </div>
                    <div class="input-field col s6">
                      <input id="lastname" type="text" class="validate" name="lname">
                      <label for="lastname" style="color:black">Last Name</label>
                    </div>
                  </div>
                  
               
        
                  
                      
                      <div class="row">
                            <div class="input-field col s6">
                              <input id="compartment" type="text" class="validate" name="comp">
                              <label for="compartment" style="color:black">Compartment</label>
                            </div>
                          </div>
                          <div class="row">
                                <div class="input-field col s6">
                                  <input id="ticket number" type="number" class="validate" name="tnum">
                                  <label for="ticket number" style="color:black">Ticket number</label>
                                </div>
                              </div>
                              <input type="date" class="datepicker" name="sub_date"/>
                              <input type="time" class="timepicker" name="sub_time"/>
                              <div class="row">
                                <div class="input-field col s6">
                                  <input id="application number" type="number" class="validate" name="appnum">
                                  <label for="application number" style="color:black">Application number</label>
                                </div>
                                <div class="row">
                                  <div class="input-field col s6">
                                    <input id="counter number" type="number" class="validate" name="cnum">
                                    <label for="counter number" style="color:black">Counter number</label>
                                  </div>
                                </div>
                                <div class="row">
                                    <div class="input-field col s6">
                                      <input id="user id" type="number" class="validate" name="uid">
                                      <label for="user id" style="color:black">User id</label>
                                    </div>
                                  </div>
                                <div class="row">
                                  <div class="input-field col s6">
                                    <input id="Train number" type="number" class="validate" name="train_num">
                                    <label for="Train number" style="color:black">Train Number</label>
                                  </div>
                                </div>
                  <input type="submit" class="waves-effect waves-light  btn" color="indigo;" name="submit" value="submit"></a>
              </div>
            

              

    <!--JavaScript at end of body for optimized loading-->
    <script type="text/javascript" src="node_modules/materialize-css/dist/js/materialize.min.js"></script>
   
   
  </body>
</html>